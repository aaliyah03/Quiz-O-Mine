<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/colorPrimaryDark"
    tools:context=".Home">

    <TextView
        android:id="@+id/smusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:text="Select your music" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/smusic"
        android:entries="@array/Array1"
        android:textColor="#000000" />

    <Button
        android:id="@+id/button1"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:layout_below="@id/spinner1"
        android:background="#FFA726"
        android:text="Select" />

    <EditText
        android:id="@+id/insertET"
        android:layout_width="282dp"
        android:layout_height="58dp"
        android:layout_below="@id/button1"
        android:layout_marginTop="25dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="New? Enter name"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/oldTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Played before? Select your name from the list below"
        android:textAlignment="center"
        android:layout_below="@id/insertET"
        android:layout_marginTop="12dp"
        android:textSize="17sp"
        android:textColor="#FFA726"/>

    <Button
        android:id="@+id/addbutton"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_below="@id/button1"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/insertET"
        android:layout_toRightOf="@+id/insertET"
        android:background="#FFA726"
        android:text="Add" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/insertET"
        android:layout_marginTop="44dp" />

    <Button
        android:id="@+id/rules"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:background="#FFA726"
        android:onClick="rulesopen"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/spinner"
        android:layout_marginTop="20dp"
        android:text="RULES"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="31dp" />

    <Button
        android:id="@+id/playButton"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/rules"
        android:layout_marginTop="10dp"
        android:background="#FFA726"
        android:onClick="playGame"
        android:text="PLAY"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="31dp" />



</RelativeLayout>
