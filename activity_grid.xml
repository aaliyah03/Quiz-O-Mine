<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Grid">

    <TextView
        android:id="@+id/timer"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:text="180"
        android:textColor="#FF0404"
        android:layout_toRightOf="@id/textView2"
        android:layout_marginLeft="20dp"
        android:textSize="40dp"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="34dp" />

    <TextView
        android:id="@+id/sec"
        android:layout_width="92dp"
        android:layout_height="50dp"
        android:layout_marginLeft="-5dp"
        android:layout_toRightOf="@id/timer"
        android:textColor="@color/colorAccent"
        android:text="sec"
        android:textSize="40dp" />

    <ImageButton
        android:id="@+id/b1"
        android:layout_width="77dp"
        android:layout_height="74dp"
        android:layout_below="@id/timer"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:onClick="f1"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <ImageButton
        android:id="@+id/b2"
        android:layout_width="77dp"
        android:layout_height="74dp"
        android:layout_below="@id/timer"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/b1"
        android:onClick="f2"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <ImageButton
        android:id="@+id/b3"
        android:layout_width="77dp"
        android:layout_height="74dp"
        android:layout_below="@id/timer"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/b2"
        android:onClick="f3"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <ImageButton
        android:id="@+id/b4"
        android:layout_width="77dp"
        android:layout_height="74dp"
        android:layout_below="@id/timer"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/b3"
        android:onClick="f4"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <ImageButton
        android:id="@+id/b5"
        android:layout_width="77dp"
        android:layout_height="74dp"
        android:layout_below="@id/b1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:onClick="f5"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <ImageButton
        android:id="@+id/b6"
        android:layout_width="77dp"
        android:layout_height="74dp"
        android:layout_below="@id/b2"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/b5"
        android:onClick="f6"
        app:srcCompat="@drawable/ic_launcher_foreground" />


    <ImageButton
        android:id="@+id/b7"
        android:layout_width="77dp"
        android:layout_height="74dp"
        android:layout_below="@id/b3"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/b6"
        android:onClick="f7"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <ImageButton
        android:id="@+id/b8"
        android:layout_width="77dp"
        android:layout_height="74dp"
        android:layout_below="@id/b4"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/b7"
        android:onClick="f8"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <ImageButton
        android:id="@+id/b9"
        android:layout_width="77dp"
        android:layout_height="74dp"
        android:layout_below="@id/b5"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:onClick="f9"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <ImageButton
        android:id="@+id/b10"
        android:layout_width="77dp"
        android:layout_height="74dp"
        android:layout_below="@id/b6"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/b9"
        android:onClick="f10"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <ImageButton
        android:id="@+id/b11"
        android:layout_width="77dp"
        android:layout_height="74dp"
        android:layout_below="@id/b7"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/b10"
        android:onClick="f11"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <ImageButton
        android:id="@+id/b12"
        android:layout_width="77dp"
        android:layout_height="74dp"
        android:layout_below="@id/b8"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/b11"
        android:onClick="f12"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <ImageButton
        android:id="@+id/b13"
        android:layout_width="77dp"
        android:layout_height="74dp"
        android:layout_below="@id/b9"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:onClick="f13"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <ImageButton
        android:id="@+id/b14"
        android:layout_width="77dp"
        android:layout_height="74dp"
        android:layout_below="@id/b10"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/b13"
        android:onClick="f14"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <ImageButton
        android:id="@+id/b15"
        android:layout_width="77dp"
        android:layout_height="74dp"
        android:layout_below="@id/b11"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/b14"
        android:onClick="f15"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <ImageButton
        android:id="@+id/b16"
        android:layout_width="77dp"
        android:layout_height="74dp"
        android:layout_below="@id/b12"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/b15"
        android:onClick="f16"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="40dp"
        android:text="Time Left:" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/b14"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:text="Lives Left:"
        android:textColor="@color/colorAccent"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/b15"
        android:layout_toRightOf="@id/textView3"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="3"
        android:textColor="#FF0404"
        android:textSize="40dp" />

    <Button
        android:id="@+id/restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView3"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        android:onClick="restart"
        android:text="Restart" />

    <Button
        android:id="@+id/quit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView3"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/restart"
        android:onClick="quit"
        android:text="Quit"
        android:textColor="#FF0404" />


</RelativeLayout>
